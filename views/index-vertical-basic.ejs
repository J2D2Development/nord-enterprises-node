<script>
$(document).ready(function() {
    
	//smooth scroll to top button
	$(window).scroll(function() {
		if($(this).scrollTop() > 200) {
			$('.toTopRd').fadeIn(500);
		} else {
			$('.toTopRd').hide();
		}
	});

	$('.toTopRd').click(function() {
		$('html, body').animate({scrollTop: 0}, 400);
		return false;
	});

    //if tooltips enabled (update this)
    $(function(){
        if($('.header_tooltip')) {
            $('.header_tooltip').tooltip({
                showURL: false,
                track: true,
                delay: 0,
                top: 10,
                left: 10
            });
        }
    });
});
</script>
</html>