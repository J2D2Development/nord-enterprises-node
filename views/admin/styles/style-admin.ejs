<style type='text/css'>
* {
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
html {
    height: 100%;
    min-height: 100%;
}
body {
	margin: 0;
  height: 100%;
  min-height: 100%;
}
.admin-flex-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  min-height: 100%;
}
.admin-main {
  flex: 1;
}

/*BOOTSTRAP OVERRIDES*/
.row {
    margin: 0 !important;
}

/*ADMIN LOGIN FORM*/
.login-form--wrapper {
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: center;
  align-items: center;
  background-color: #333;
  background: radial-gradient(circle, #ffffff, #cccccc, #a9a9a9, #999999, #666666);
}
.login-form--inner {
  width: 30%;
  min-width: 300px;
  background-color: rgba(255,255,255,0.4);
  color: #f5f5f5;
  border-radius: 5px;
  padding-bottom: 12px;
}
.login-form--inner h1 {
  font-weight: 100;
  display: flex;
  align-items: center;
  color: #0B486B;
  padding: 16px;
  margin: 0;
  border-top-right-radius: 5px;
  border-top-left-radius: 5px;
}
.login-form--inner h1 img {
  height: 110px;
  width: auto;
}
.subhead {
  font-size: 12pt;
  font-style: italic;
}
.login-form {
  display: flex;
  flex-direction: column;
}
.login-form input[type=text], .login-form input[type=password] {
  border: 0;
  border-left: 2px solid transparent;
  background-color: inherit;
  padding: 6px 12px 6px 12px;
  width: 90%;
  margin: 4px auto 8px auto;
  font-size: 1.25em;
  color: #333;
  transition: border 0.6s ease;
}
.login-form input[type=text]:focus, .login-form input[type=password]:focus {
  outline: 0;
  border-left: 2px solid #E8860C;
}
.login-bottom--wrapper {
  width: 100%;
  text-align: center;
  border-bottom-right-radius: 5px;
  border-bottom-left-radius: 5px;
  margin-top: 4px;
}
.login-form button {
  border: 0;
  background-color: rgba(11,72,107,1);
  color: #f5f5f5;
  padding: 6px 0 6px 0;
  font-size: 1.15em;
  width: 90%;
  margin: 6px auto;
  font-weight: 100;
  cursor: pointer;
  transition: all 0.5s ease;
}
.login-form button:hover {
  background-color: rgba(11,72,107, 0.8);
}

/*menu*/
.menu-row {
  background-color: #34495e;
}
.menu-row img {
  height: 50px;
}

/*admin bootstrap overrides*/
.navbar {
  margin-bottom: 0;
  border: none;
}
.navbar-default {
  border-color: inherit;
  background-color: #34495e;
}
@media (min-width: 768px) {
  .navbar-header {
    margin-left: 5px;
  }
  .navbar-brand {
    margin-left: 5px !important;
  }
}
.navbar-header {
  margin-left: 0 !important;
  margin-right: 0 !important;
}
.navbar-brand {
  border: none;
  padding: 0;
  margin: 0;
  margin-left: 5px;
}
.navbar-nav > li > a {
  margin-bottom: 0;
  background-color: #ccc;
  color: #34495e !important;
  border-bottom: 2px solid transparent;
  border: none;
  margin-left: 3px;
  padding: 6px !important;
}
.navbar-nav > li > a:hover {
  background-color: #ccc !important;
  color: inherit !important;
  border-bottom: 2px solid red;
}

/*EDIT MODAL FORM*/
.flex-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16px;
}
label {
  font-size: 1.2em;
  font-weight: normal;
  margin-bottom: 2px;
}
.half-width {
  width: 48%;
}
.full-width {
  width: 100%;
}

/*Custom modal*/
.nord-modal {
  display: none;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9999;
}
.modal-show {
  display: block;
}


/*Back to top button*/
.toTop {
	display: none;
	position: fixed;
	bottom: 20px;
	right: 10px;
	border-radius: 50%;
	z-index: 99;
	text-align: center;
	height: 30px;
	width: 30px;
	line-height: 30px;
	font-size: 15pt;
  background-color: #333;
  color: #fff;
  border: #333;
  cursor: pointer;
  transition: all 0.3s ease;
  -webkit-transition: all 0.3s ease;
}
.toTop:hover {
    background-color: #ccc;
    color: #333;
}

/*SELECT LIST*/
.admin-select-list {
  color: #333;
}

/*EDIT ICON PLACEMENT*/
.edit-icon-right {
  position: absolute;
  top: 3px;
  right: 6px;
}

/*SLIDEOUT*/
.page-menu-right {
  margin-right: 15px;
  font-size: 2em;
  color: #fff;
}
.page-menu-right .glyphicon {
  cursor: pointer;
  transition: transform 0.3s linear;
}
.page-menu-right .glyphicon:hover {
  transform: scale(1.2);
}
.flex-row-apart {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.slideout-right {
  position: fixed;
  width: 25%;
  min-width: 200px;
  background-color: #333;
  color: #fff;
  top: 0;
  right: 0;
  height: 100%;
  z-index: 9999;
  transform: translateX(100%);
  transition: transform 0.3s cubic-bezier(0, 0, 0.3, 1);
}
.slideout-wrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;
}
.slideout-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 3px 6px;
  font-size: 2em;
  font-weight: 100;
}
.slideout-header .glyphicon {
  cursor: pointer;
}
.slideout-main {
  flex: 1;
  padding: 16px 12px;
}
.slideout__quicklinks {
  display: flex;
  flex-wrap: wrap;
  padding: 6px;
}
.slideout__quicklinks a {
  color: inherit;
  background-color: #34495e;
  padding: 3px;
  margin: 0 3px 3px 0;
}
.slideout-footer {
  width: 100%;
  background-color: #000;
}
.slideout-footer h4 {
  text-align: right;
  padding: 6px 6px 0 0;
  margin: 0;
}
.slideout-right--show {
  transform: translateX(0);
}
.rotatable {
  transition: transform 0.6s 0.3s;
}
.menu-open {
  transform: rotate(180deg);
}

/*SLIDEOUT ACCORDION*/
.slideout-options__button {
  background-color: #ccc;
  border: none;
  width: 100%;
  border-bottom: 1px solid #333;
  font-size: 1.25em;
}
.slideout-options__content {
  padding: 16px;
  overflow-y: auto;
  background-color: #fff;
  color: #333;
}
.accordion-hidden {
  min-height: 0;
}

/*MODAL-SLIDEOUT BG*/
.bg-screen {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9998;
  height: 100%;
  width: 100%;
  background-color: rgba(0,0,0,0.4);
  transform: translateX(100%);
  transition: transform 0.6s cubic-bezier(0, 0, 0.3, 1);
}
.bg-show {
  transform: translateX(0);
}

/*FOOTER*/
.admin-footer {
  padding: 6px;
  background-color: #34495e;
  color: #fff;
}

/*NOFIFYR - move to separate file*/
.notifyr {
  position: absolute;
  bottom: 6px;
  right: 6px;
  padding: 6px 12px;
  background-color: #333;
  color: #fff;
  transform: translateY(0);
  transition: transform 0.5s;
}


/*LOADING ANIMATION*/
.loading-wrapper {
  width: 100%;
  text-align: center;
}
.spinner {
  margin: 100px auto 0;
  width: 70px;
  text-align: center;
}

.spinner > div {
  width: 18px;
  height: 18px;
  background-color: #333;

  border-radius: 100%;
  display: inline-block;
  -webkit-animation: sk-bouncedelay 1.4s infinite ease-in-out both;
  animation: sk-bouncedelay 1.4s infinite ease-in-out both;
}

.spinner .bounce1 {
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}

.spinner .bounce2 {
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}

@-webkit-keyframes sk-bouncedelay {
  0%, 80%, 100% { -webkit-transform: scale(0) }
  40% { -webkit-transform: scale(1.0) }
}

@keyframes sk-bouncedelay {
  0%, 80%, 100% { 
    -webkit-transform: scale(0);
    transform: scale(0);
  } 40% { 
    -webkit-transform: scale(1.0);
    transform: scale(1.0);
  }
}


</style>
